<%- include("../partials/html-head") %>
<link rel="stylesheet" href="/stylesheets/rides/forms.css">
<%- include("../partials/nav") %>

<main>
  <h1><%= title %></h1>
  
  <form 
  action="/horses/<%= horse._id %>?_method=PUT" 
  method="POST"
  id="edit-form" 
  >
    
    <label>
      Barn Name:
    <input type="text" name="barnName" id="horse-input" required="true" value="<%= horse.barnName %>">
    </label> 
    <label>
      Registered Name:
    <input type="text" name="name" id="horse-input" required="true" value="<%= horse.name %>">
    </label>
    <label>
      Sex:
      <select name="sex" id="horse-select">
      <option value="Gelding" <%= horse.sex === 'Gelding' ? 'selected' : '' %> >Gelding</option>
      <option value="Mare" <%= horse.sex === 'Mare' ? 'selected' : '' %>   >Mare</option>
      <option value="Stallion" <%= horse.sex === 'Stallion' ? 'selected' : '' %> >Stallion</option>
    </select>
    </label>
    
    <label>
      Status:
    <select name="status" id="horse-select" required="true">
      <option value="Active" <%= horse.status === 'Active' ? 'selected' : '' %>   >Active</option>
      <option value="Lame" <%= horse.status === 'Lame' ? 'selected' : '' %>>Lame</option>
      <option value="Retired" <%= horse.status === 'Retired' ? 'selected' : '' %>>Retired</option>
    </select>
    </label>
    <label>
      Height:
      <input type="number" step=".1" name="height" id="horse-number" value="<%= horse.height %>">
    </label>
    <label>
      Weight Limit:
      <input type="number" name="weightLimit" id="horse-number" value="<%= horse.weightLimit %>">
    </label>
    <label>
      Lesson Horse:
    <input type="checkbox" name="lessonHorse" id="horse-checkbox" <%= horse.lessonHorse ? 'checked' : '' %>>
  </label>
    <label>
      Trail Horse:
    <input type="checkbox" name="trailHorse" id="horse-checkbox" <%= horse.trailHorse ? 'checked' : '' %>>
  </label>

    <button type="submit">Update Horse</button>
  </form>

  <a href="/horses">Go Back</a>

</main>
<%- include("../partials/footer") %>